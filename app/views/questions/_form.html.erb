<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Question
    <small><%= @subtitle %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Question</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-7">
      <!-- general form elements disabled -->
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title"><%= @box_title %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_for @question, url: @url do |question| %>
            <!-- textarea -->
            <div class="form-group">
              <%= question.text_area :content, class: "form-control", placeholder: @placeholder_content %>
            </div>

            <%= question.check_box :anonymous %>
            <%= question.label :anonymous %>

            <div class="form-group has-feedback" id="question-attachment-box">
              <% if @question.attachment? %>
                <span>
                  <i class='fa fa-paperclip'></i>
                  <%= @question.attachment_file_name %>
                </span>
              <% end %>

              <%= link_to "Manage attachment", "#", class: 'btn btn-primary', id: 'edit-attachment-button', remote: true %>
            </div>

            <%= question.file_field :attachment, class: 'form-control hidden', id: 'question-attachment-link' %>

            <% if @question.attachment? %>
              <label class='hidden' id="delete-attachment-label">
                <%= check_box_tag 'delete_attachment', 1, false %>
                Delete attachment?
              </label>
            <% end %>

            <%= button_tag(type: "submit", class: "btn btn-app pull-right", id: 'submit-question-button') do %>
              <i class="fa fa-save"></i>
            <% end %>
          <% end %>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
      <div class="input-group margin">
        <div class="input-group-btn">
          <% if @question.valid? %>
            <%= button_to "Delete Room", question_path(@question), class: "btn btn-flat btn-danger", data: { confirm: "Hmmm! Are you sure?" }, method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
    <!--/.col (right) -->
  </div>
</section>
