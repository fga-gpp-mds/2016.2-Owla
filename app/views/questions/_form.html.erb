<div class="row">
    <div class="pad">
      <%= form_for question, url: url, remote: true, html: { class: 'modal-form' }  do |f| %>
        <input id="hidden-slide-id" name="slide_id" type="hidden" value="<%= slide_id %>" />
        <%= f.text_area :content, class:"textarea", placeholder: placeholder,
            style: "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" %>

        <%= f.check_box :anonymous %>
        <span class="option", style="font-size: 0.8em;">
          Anonymous
        </span>

        <div class="form-group has-feedback" id="question-attachment-box">
          <% if question.attachment? %>
            <span>
              <i class='fa fa-paperclip'></i>
              <%= question.attachment_file_name %>
            </span>
          <% end %>

        </div>

        <%= f.file_field :attachment, class: 'form-control', id: 'question-attachment-link' %>

        <% if question.attachment? %>
          <label class='hidden' id="delete-attachment-label">
            <%= check_box_tag 'delete_attachment', 1, false %>
            Delete attachment?
          </label>
        <% end %>

        <%= button_tag(type: "submit", class: "btn pull-right") do %>
            <i class="fa fa-save"></i>
        <% end %>
      <% end %>
  </div>
</div>
